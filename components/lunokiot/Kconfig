# https://www.kernel.org/doc/html/latest/kbuild/kconfig-language.html#introduction
menu "lunokIoT"
    config LUNOKIOT_DEBUG
        bool "Enable Serial debug"
        default y
        help
            Enable debug to serial
    choice
        prompt "Device support"
        help
            select Select device to support
        default LUNOKIOT_DEVICE_ESP32
        config LUNOKIOT_DEVICE_ESP32
            bool "ESP-32 based board"
            help
                Generic unspecified ESP32
        config LUNOKIOT_DEVICE_M5STACK_ATOM_LITE
            bool "M5Stack Atom Lite"
            help
                Enable support for M5Stack Atom lite device
        config LUNOKIOT_DEVICE_M5STACK_STICK_C_PLUS
            bool "M5StickC Plus"
            help
                Enable support for M5Stack Stick C Plus
        config LUNOKIOT_DEVICE_LILYGO_TWATCH_2020_V3
            bool "LilyGo T-Watch 2020 v3"
            help
                Enable support for LilyGo T-Watch 2020 v3
    endchoice
endmenu
